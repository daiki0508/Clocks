<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="oval">
            <corners
                android:radius="15dip" />
            <gradient
                android:angle="90"
                android:startColor="#000000"
                android:endColor="#808080" />
            <padding
                android:left="15dip"
                android:top="15dip"
                android:right="15dip"
                android:bottom="15dip" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape
            android:shape="oval">
            <corners
                android:radius="15dip" />
            <gradient
                android:angle="90"
                android:startColor="#a9a9a9"
                android:endColor="#000000" />
            <padding
                android:left="15dip"
                android:top="15dip"
                android:right="15dip"
                android:bottom="15dip" />
        </shape>
    </item>
</selector>